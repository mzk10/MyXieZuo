<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack_t"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dimen_20dip"
        android:background="@drawable/edit_bg"
        android:orientation="vertical"
        android:padding="@dimen/dimen_10dip">

        <TextView
            android:id="@+id/tv_inputdialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dimen_5dip"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/font_18sp" />

        <EditText
            android:id="@+id/et_inputdialog_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_5dip"
            android:background="@drawable/edit_bg"
            android:padding="@dimen/dimen_5dip"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/font_16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_5dip"
            android:layout_marginEnd="@dimen/dimen_30dip"
            android:layout_marginStart="30dip"
            android:layout_marginTop="@dimen/dimen_30dip"
            android:gravity="center"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_inputdialog_confirm"
                    style="@style/dialog_confirm_button"
                    android:text="@string/btn_confirm" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_inputdialog_cancel"
                    style="@style/dialog_confirm_button"
                    android:text="@string/btn_cancel" />
            </FrameLayout>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>